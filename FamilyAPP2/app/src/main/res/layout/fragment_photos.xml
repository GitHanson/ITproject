<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background3">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Photo"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="top"
        android:layout_below="@id/uploadButton"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:maxLines="5"
        android:hint="Description"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <ImageButton
        android:id="@+id/uploadButton"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/textView3"
        android:background="#0000"
        android:contentDescription="uploadButton"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView3"
        app:srcCompat="@drawable/add_picture" />

    <Button
        android:id="@+id/btn_upload_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/title_upload" />

    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_upload_photo"
        android:layout_alignBottom="@id/btn_upload_photo"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_toEndOf="@id/btn_upload_photo"
        android:layout_toRightOf="@id/btn_upload_photo"
        android:gravity="center"
        android:text="Show Uploads"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_upload_photo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_category"
        android:text="@string/select_category"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/et_description" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_categories"
        android:backgroundTint="@color/white"
        android:layout_below="@id/et_description"
        android:layout_toRightOf="@+id/select_category"
        android:layout_alignTop="@id/select_category"
        android:layout_marginLeft="20dp">

    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/privacy_setting"
        android:text="@string/privacy_setting"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/select_category"/>

    <ToggleButton
        android:id="@+id/privacy_toggle"
        android:layout_width="52dp"
        android:layout_height="27dp"
        android:layout_below="@id/spinner_categories"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="43dp"
        android:layout_toRightOf="@id/privacy_setting"
        android:background="@drawable/privacy_selector"
        android:textOff=""
        android:textOn="" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadSpinner"
        android:layout_centerInParent="true"
        android:visibility="gone">

    </ProgressBar>


</RelativeLayout>
