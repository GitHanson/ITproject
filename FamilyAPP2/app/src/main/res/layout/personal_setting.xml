<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3">

    <ImageButton
        android:id="@+id/goback"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="#0000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_btn" />

    <ImageView
        android:id="@+id/set"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/goback"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/setting" />

    <TextView
        android:id="@+id/Settings"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="36dp"
        android:text="Settings"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/set"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/Logout"
        android:layout_width="414dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_effect"
        android:text="Log out"
        android:textColor="#FFFFFFFF"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AboutUs"
        tools:visibility="visible" />

    <Button
        android:id="@+id/AboutUs"
        android:layout_width="414dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_effect"
        android:text="About us"
        android:textColor="#FFFFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FamilyCode"
        tools:visibility="visible" />

    <Button
        android:id="@+id/FamilyCode"
        android:layout_width="414dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_effect"
        android:text="My Family Code"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/AboutUs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeProfilePhoto"
        tools:visibility="visible" />

    <Button
        android:id="@+id/changeProfilePhoto"
        android:layout_width="414dp"
        android:layout_height="55dp"
        android:layout_marginTop="125dp"
        android:background="@drawable/button_effect"
        android:text="change profile photo"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/FamilyCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goback"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>